{
  "extends": "@dword-design/eslint-config",
  "globals": {
    "$fetch": "readonly"
  },
  "overrides": [
    {
      "files": "pages/**/*.vue",
      "globals": {
        "definePageMeta": "readonly"
      }
    }
  ],
  "rules": {
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "#imports",
          "#components",
          "#content"
        ]
      }
    ],
    "import/no-webpack-loader-syntax": "off"
  }
}
