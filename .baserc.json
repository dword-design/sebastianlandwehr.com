{
  "name": "@dword-design/app",
  "testInContainer": true,
  "eslintConfig": {
    "rules": {
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "#content"
          ]
        }
      ]
    }
  },
  "editorIgnore": [".data"],
  "gitignore": ["/.data"],
  "depcheckConfig": {
    "ignoreMatches": [
      "playwright",
      "playwright-chromium"
    ]
  },
  "allowedMatches": ["content.config.js", "global-pid.js", "global-setup.js", "global-teardown.js"],
  "testRunner": "playwright"
}
